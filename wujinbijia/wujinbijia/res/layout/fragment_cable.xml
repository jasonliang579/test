<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:orientation="vertical">  
	<LinearLayout 
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent"  
	    android:layout_marginBottom="15dip"  
	    android:orientation="vertical"
	    android:layout_above="@+id/text_bottom">  
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"  
		    android:layout_height="0dip"  
		    android:layout_weight="0.2"
			android:layout_marginTop="15dip"  
		    android:orientation="horizontal">
		    <LinearLayout 
		        android:layout_width="fill_parent"  
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="40dip"
			    android:layout_marginRight="40dip"  
			    android:layout_gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@drawable/price_bg">
			    
			    <TextView 
				    android:id="@+id/text_brand_name"
			        android:layout_width="wrap_content"  
			    	android:layout_height="wrap_content"
			    	android:layout_gravity="center_horizontal"
					android:layout_marginTop="10dip"
			    	android:text=""
			    	android:textSize="22sp"
			    	android:textColor="@color/hardware_item_text_redcolor"/>
				<LinearLayout 
			        android:layout_width="wrap_content"  
				    android:layout_height="50dip"  
				    android:layout_gravity="center"
				    android:layout_marginLeft="8dip"
				    android:orientation="horizontal">
				    <ImageView 
				        android:layout_width="wrap_content"  
				    	android:layout_height="50dip"
						android:layout_gravity="center"
						android:gravity="center"
				    	android:src="@drawable/curprice"
						android:scaleType="fitCenter"/>
					<TextView 
						android:id="@+id/text_brand_price"
						android:layout_width="wrap_content"  
						android:layout_height="50dip"
						android:layout_marginLeft="5dip"
						android:layout_gravity="center"
						android:gravity="center"
						android:text="未有价格"
						android:textSize="22sp"
						android:textColor="@color/hardware_item_text_redcolor"/>
			        <TextView 
				        android:layout_width="wrap_content"  
				    	android:layout_height="50dip"
				    	android:layout_gravity="center"
						android:gravity="center"
				    	android:layout_marginLeft="4dip"
				    	android:text="（元/米）"
				    	android:textSize="22sp"
				    	android:textColor="@color/hardware_item_text_redcolor"/> 
			     </LinearLayout>	
		    </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"  
		    android:layout_height="0dip"  
		    android:layout_weight="0.06"
			android:layout_marginTop="5dip"  
		    android:orientation="horizontal">
		    <RelativeLayout 
		        android:layout_width="0dip"  
			    android:layout_height="wrap_content"
			    android:layout_weight="1">
			    <EditText 
					android:id="@+id/edit_discount1"
					android:layout_width="wrap_content"  
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:hint="折扣"
					android:digits="1234567890."
					android:textSize="14sp"
					android:background="@drawable/edit_bg1"/>
			</RelativeLayout>
			<RelativeLayout 
		        android:layout_width="0dip"  
			    android:layout_height="wrap_content"
			    android:layout_weight="1">
			    <EditText 
					android:id="@+id/edit_discount2"
					android:layout_width="wrap_content"  
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_gravity="center"
					android:gravity="center"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:hint="折扣"
					android:digits="1234567890."
					android:textSize="14sp"
					android:background="@drawable/edit_bg1"/>
			</RelativeLayout>
			<RelativeLayout 
		        android:layout_width="0dip"  
			    android:layout_height="wrap_content"
			    android:layout_weight="1">
			    <EditText 
					android:id="@+id/edit_discount3"
					android:layout_width="wrap_content"  
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_gravity="center"
					android:gravity="center"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:hint="折扣"
					android:digits="1234567890."
					android:textSize="14sp"
					android:background="@drawable/edit_bg1"/>
			</RelativeLayout>
			<RelativeLayout 
		        android:layout_width="0dip"  
			    android:layout_height="wrap_content"
			    android:layout_weight="1">
			    <EditText 
					android:id="@+id/edit_discount4"
					android:layout_width="wrap_content"  
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_gravity="center"
					android:gravity="center"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip"
					android:hint="折扣"
					android:digits="1234567890."
					android:textSize="14sp"
					android:background="@drawable/edit_bg1"/>
			</RelativeLayout>
		</LinearLayout>
		
	    <RelativeLayout 
	        android:layout_width="fill_parent"  
		    android:layout_height="0dip"
		    android:layout_weight="0.37"
		    android:layout_marginLeft="5dip"
		    android:layout_marginRight="5dip">

			<RelativeLayout 
			    android:id="@+id/layout_brand" 
		        android:layout_width="30dip"  
			    android:layout_height="60dip"
			    android:layout_centerVertical="true"
			    android:background="@drawable/kind_left" >
				<TextView
		            android:id="@+id/text_brand" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:singleLine="false"
					android:ems="1"
					android:layout_centerInParent="true"
					/>
			</RelativeLayout>
	        <RelativeLayout 
			    android:id="@+id/layout_category" 
		        android:layout_width="30dip"  
			    android:layout_height="60dip"
			    android:layout_centerVertical="true"
			    android:layout_alignParentRight="true"
			    android:background="@drawable/kind_right" >
				<TextView
		            android:id="@+id/text_category" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:singleLine="false"
					android:ems="1"
					android:layout_centerInParent="true"
					/>
			</RelativeLayout>
	        <LinearLayout
				android:layout_height="fill_parent"
				android:layout_gravity="center_horizontal"
				android:layout_width="fill_parent"
				android:layout_toLeftOf="@+id/layout_category"
				android:layout_toRightOf="@+id/layout_brand"
				android:paddingTop="4dp"
				android:layout_marginTop="8dp"
				android:orientation="horizontal">
			
			   	<kankan.wheel.widget.WheelView 
			    	android:id="@+id/whell_brand"
			        android:layout_height="fill_parent"
			        android:layout_width="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_weight="1"/>
				
				<kankan.wheel.widget.WheelView 
				    android:id="@+id/whell_category"
					android:layout_height="fill_parent"
					android:layout_width="wrap_content"
			        android:layout_gravity="center_vertical"
					android:layout_marginLeft="0dp"
					android:layout_weight="1"/>
			</LinearLayout>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="fill_parent"  
		    android:layout_height="0dip"
		    android:layout_weight="0.37"
		    android:layout_marginLeft="5dip"
		    android:layout_marginRight="5dip">
	        <RelativeLayout 
			    android:id="@+id/layout_standard" 
		        android:layout_width="30dip"  
			    android:layout_height="60dip"
			    android:layout_centerVertical="true"
			    android:background="@drawable/kind_left" >
				<TextView
		            android:id="@+id/text_standard" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:singleLine="false"
					android:ems="1"
					android:layout_centerInParent="true"
					/>
			</RelativeLayout>
	        <RelativeLayout 
			    android:id="@+id/layout_area" 
		        android:layout_width="30dip"  
			    android:layout_height="60dip"
			    android:layout_centerVertical="true"
			    android:layout_alignParentRight="true"
			    android:background="@drawable/kind_right" >
				<TextView
		            android:id="@+id/text_area" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:singleLine="false"
					android:ems="1"
					android:layout_centerInParent="true"
					/>
			</RelativeLayout>
	       
	        <LinearLayout
				android:layout_height="fill_parent"
				android:layout_gravity="center_horizontal"
				android:layout_width="fill_parent"
				android:layout_toLeftOf="@+id/layout_area"
				android:layout_toRightOf="@+id/layout_standard"
				android:paddingTop="4dp"
				android:layout_marginTop="8dp"
				android:orientation="horizontal">
			
			   	<kankan.wheel.widget.WheelView 
			    	android:id="@+id/whell_standard"
			        android:layout_height="fill_parent"
			        android:layout_width="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_weight="1"/>
				
				<kankan.wheel.widget.WheelView 
				    android:id="@+id/whell_area"
					android:layout_height="fill_parent"
					android:layout_width="wrap_content"
			        android:layout_gravity="center_vertical"
					android:layout_marginLeft="0dp"
					android:layout_weight="1"/>
			</LinearLayout>
	    </RelativeLayout>
	    
	</LinearLayout>  
	
	<TextView
        android:id="@+id/text_bottom" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_gravity="center"
		android:gravity="center"
		android:textSize="14sp"
		android:text="加入品牌库请电4000987095"
		/>
	
	<include layout="@layout/progress_bar" />
	
</RelativeLayout>