<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/layout_order_item"
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:orientation="vertical"
	>
    
    <RelativeLayout 
        android:layout_width="fill_parent"  
    	android:layout_height="wrap_content" 
    	android:background="#ffffffff">
        <TextView 
            android:id="@+id/textview_edit"
            android:layout_width="wrap_content"  
    		android:layout_height="wrap_content" 
    		android:gravity="center_vertical"
    		android:layout_marginRight="15dip"
    		android:layout_alignParentRight="true"
    		android:text="编辑"
    		android:textSize="16sp"
    		android:textColor="@color/hardware_item_text_blackcolor"/>
    </RelativeLayout>
    
	<LinearLayout 
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent"  
	    android:orientation="horizontal"
		android:background="@color/hardware_title_background">  
	
	    <ImageView 
	        android:id="@+id/image_select"
	        android:layout_width="0dip"  
		    android:layout_height="fill_parent"  
		    android:layout_weight="0.1"
		    android:src="@drawable/selectall"
		    android:scaleType="fitCenter"
		    android:layout_centerVertical="true"
		    android:visibility="gone"
		    />
	    <LinearLayout
		    android:layout_width="0dip"  
		    android:layout_height="wrap_content"  
		    android:layout_weight="0.75"
		    android:layout_marginTop="1dip"
		    android:orientation="vertical">  
		    
		    <LinearLayout
			    android:layout_width="fill_parent"  
			    android:layout_height="wrap_content"  
			    android:orientation="horizontal">  
			    <LinearLayout
				    android:layout_width="0dip"  
				    android:layout_height="wrap_content"  
				    android:layout_weight="1"
				    android:orientation="vertical"> 
				    <LinearLayout
					    android:layout_width="wrap_content"  
					    android:layout_height="wrap_content"  
					    android:orientation="horizontal"> 
					    <TextView 
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="15dip"
				    		android:text="品牌:"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
					    <TextView 
					        android:id="@+id/textview_brand"
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="5dip"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
				    </LinearLayout>
				    <LinearLayout
					    android:layout_width="wrap_content"  
					    android:layout_height="wrap_content"  
					    android:orientation="horizontal"> 
					    <TextView 
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="15dip"
				    		android:text="规格:"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
					    <TextView 
					        android:id="@+id/textview_standard"
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="5dip"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
				    </LinearLayout>
				</LinearLayout>
				
			    <LinearLayout
				    android:layout_width="0dip"
				    android:layout_height="wrap_content"  
				    android:layout_weight="1"
				    android:orientation="vertical"> 
				    <LinearLayout
					    android:layout_width="wrap_content"  
					    android:layout_height="wrap_content"  
					    android:orientation="horizontal"> 
					    <TextView 
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="5dip"
				    		android:text="分类:"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
					    <TextView 
					        android:id="@+id/textview_type"
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="5dip"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
				    </LinearLayout>
				    <LinearLayout
					    android:layout_width="wrap_content"  
					    android:layout_height="wrap_content"  
					    android:orientation="horizontal"> 
					    <TextView 
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="5dip"
				    		android:text="截面积:"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
					    <TextView 
					        android:id="@+id/textview_area"
				            android:layout_width="wrap_content"  
				    		android:layout_height="wrap_content" 
				    		android:gravity="center_vertical"
				    		android:layout_marginLeft="5dip"
				    		android:textSize="16sp"
				    		android:textColor="@color/hardware_item_text_blackcolor"/>
				    </LinearLayout>
				</LinearLayout>
		    </LinearLayout>
		    
		    
		     <RelativeLayout
			    android:layout_width="fill_parent"  
			    android:layout_height="wrap_content"  
			    android:paddingTop="5dip"
			    android:paddingBottom="5dip"
			    android:orientation="horizontal"> 
			    <LinearLayout
				    android:layout_width="fill_parent"  
				    android:layout_height="wrap_content"  
				    android:orientation="horizontal"
				    android:focusable="true" 
				    android:focusableInTouchMode="true"> 
				    <TextView 
			            android:id="@+id/textview_orderitem_money"
			            android:layout_width="0dip"  
			    		android:layout_height="wrap_content" 
			    		android:layout_weight="1"
			    		android:layout_gravity="center_vertical"
			    		android:layout_marginLeft="15dip"
			    		android:textColor="@color/hardware_item_text_redcolor"
			    		android:textSize="20sp"/>
				    <EditText 
				        android:id="@+id/edit_orderitem_count"
			            android:layout_width="0dip"  
			    		android:layout_height="wrap_content" 
			    		android:layout_weight="1"
			    		android:gravity="center"
			    		android:textSize="16sp"
			    		android:layout_marginRight="20dip"
			    		android:layout_marginLeft="20dip"
			    		android:text="1"
			    		android:background="@drawable/edit_bg"
			    		android:visibility="invisible"/>
			    </LinearLayout>
	
			    <TextView 
			        android:id="@+id/textview_orderitem_count"
		            android:layout_width="wrap_content"  
		    		android:layout_height="wrap_content" 
		    		android:layout_gravity="center_vertical"
		    		android:gravity="center_vertical"
		    		android:layout_marginRight="30dip"
		    		android:layout_alignParentRight="true"
		    		android:textColor="@color/hardware_item_text_blackcolor"
		    		android:textSize="15sp"/>
		    </RelativeLayout>
	    </LinearLayout>
	
	    <TextView 
	        android:id="@+id/textview_item_delete"
	        android:layout_width="0dip"  
		   	android:layout_height="fill_parent"
		   	android:layout_weight="0.15"
		   	android:gravity="center"
		   	android:textColor="#ffffffff"
		   	android:text="删除"
		   	android:textSize="16sp"
		   	android:background="@color/hardware_item_text_redcolor"
		   	android:visibility="gone"/> 
	
	    
	</LinearLayout>
</LinearLayout>

