<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/layout_orderlist_item"
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:orientation="vertical"
	android:background="#ffeeeeee"
	>  
	
    <RelativeLayout 
        android:layout_width="fill_parent"  
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
	    android:background="#ffffffff">
	    <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="10dip"
		    android:orientation="vertical">
		    <LinearLayout
			    android:layout_width="wrap_content"  
			    android:layout_height="wrap_content"  
			    android:orientation="horizontal">  
			    <TextView 
		            android:layout_width="wrap_content"  
		    		android:layout_height="wrap_content" 
		    		android:gravity="center_vertical"
		    		android:text="订单号："
		    		android:textSize="@dimen/item_text_size"/>
			    <TextView 
			        android:id="@+id/text_order_id"
		            android:layout_width="wrap_content"  
		    		android:layout_height="wrap_content" 
		    		android:gravity="center_vertical"
		    		android:textSize="@dimen/item_text_size"/>
	        </LinearLayout>
	        <TextView 
	            android:id="@+id/text_order_money"
	            android:layout_width="wrap_content"  
	    		android:layout_height="wrap_content" 
	    		android:paddingBottom="10dip"
	    		android:gravity="center_vertical"
	    		android:textSize="@dimen/item_text_size"/>
        </LinearLayout>
        <LinearLayout
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"  
		    android:layout_marginTop="10dip"
		    android:layout_marginRight="10dip"
		    android:layout_alignParentRight="true"
		    android:orientation="vertical">  
		    <TextView 
		        android:id="@+id/text_order_date"
	            android:layout_width="wrap_content"  
	    		android:layout_height="wrap_content" 
	    		android:gravity="center_vertical"
	    		android:layout_marginRight="5dip"
	    		android:layout_gravity="right"
	    		android:textColor="#ff999999"
	    		android:textSize="@dimen/item_text_size"/>
		    <TextView 
		        android:id="@+id/text_order_count"
	            android:layout_width="wrap_content"  
	    		android:layout_height="wrap_content" 
	    		android:gravity="center_vertical"
	    		android:layout_marginRight="5dip"
	    		android:layout_gravity="right"
	    		android:textColor="#ff999999"
	    		android:textSize="@dimen/item_text_size"/>
        </LinearLayout>
    </RelativeLayout>

    
    
     <LinearLayout
	    android:layout_width="fill_parent"  
	    android:layout_height="50dip"  
	    android:background="#ffffffff"
	    android:orientation="horizontal"
	    android:layout_marginTop="1dip"
	    android:paddingRight="5dip"
	    android:gravity="center_vertical|right"> 
	    <TextView 
	        android:id="@+id/text_order_item_count"
            android:layout_width="wrap_content"  
    		android:layout_height="wrap_content" 
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="20dip"
    		android:textSize="15sp"
    		android:textColor="#ff4c5053"/>
	    <TextView 
            android:layout_width="wrap_content"  
    		android:layout_height="wrap_content" 
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="30dip"
    		android:text="实际金额："
    		android:textSize="15sp"
    		android:textColor="#ff8e9193"/>
	    <TextView 
	        android:id="@+id/text_order_totalmoney"
            android:layout_width="wrap_content"  
    		android:layout_height="wrap_content" 
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="5dip"
    		android:textSize="15sp"
    		android:textColor="#ff4c5053"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_order_paydetail"
        android:layout_width="fill_parent"  
   		android:layout_height="50dip" 
   		android:layout_marginTop="1dip"
   		android:paddingRight="5dip"
   		android:gravity="center_vertical|right"
   		android:text="已收到定金2000，还要支付余额6000元"
   		android:textSize="15sp"
   		android:background="@color/hardware_item_widthbackground"
   		/>
    <RelativeLayout 
        android:layout_width="fill_parent"  
	    android:layout_height="wrap_content"  
	    android:background="#ffffffff"
	    android:orientation="horizontal"
	    android:layout_marginTop="1dip"
	    android:layout_gravity="center_vertical">
	    <LinearLayout
		    android:layout_width="wrap_content"  
		    android:layout_height="50dip"  
		    android:orientation="horizontal"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dip"
		    android:layout_gravity="center_vertical"> 
		    <Button 
		        android:id="@+id/btn_order_delete"
		        android:layout_width="wrap_content"  
	    		android:layout_height="40dip" 
	    		android:layout_gravity="center_vertical"
	    		android:text="删除订单"
	    		android:textColor="#ff606670"
	    		android:background="@drawable/btn_gb"/>
		    <Button 
		        android:id="@+id/btn_order_modify"
		        android:layout_width="wrap_content"  
	    		android:layout_height="40dip" 
	    		android:layout_gravity="center_vertical"
	    		android:layout_marginLeft="3dip"
	    		android:text="修改订单"
	    		android:textColor="#ff606670"
	    		android:background="@drawable/btn_gb"/>
	        <Button 
	            android:id="@+id/btn_order_confirm"
		        android:layout_width="wrap_content"  
	    		android:layout_height="40dip" 
	    		android:layout_gravity="center_vertical"
	    		android:layout_marginLeft="3dip"
	    		android:text="确认收货"
	    		android:textColor="#ffffffff"
	    		android:background="@drawable/btn2_bg"/>
	    </LinearLayout>
    </RelativeLayout>
    
    
</LinearLayout>  