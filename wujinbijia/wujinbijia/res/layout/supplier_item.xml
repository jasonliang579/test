<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content" 
    android:orientation="vertical"
	android:background="#ffeeeeee">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dip"
	    android:background="#ffffffff"
	    android:orientation="vertical"
	    android:paddingBottom="10dip"
	    android:paddingTop="10dip" >
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal" >
	
	        <TextView
	        	android:id="@+id/text_suppliername"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textColor="@color/hardware_getorder_text_gradcolor"
	            android:textSize="15sp" />
	
	        <TextView
	        	android:id="@+id/text_supplier_record"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="45dip"
	            android:text=""
	            android:textColor="@color/hardware_getorder_text_gradcolor"
	            android:textSize="15sp" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:layout_width="80dip"
	            android:layout_height="wrap_content"
	            android:text="报价时间"
	            android:textColor="@color/hardware_getorder_label_gradcolor"
	            android:textSize="15sp" />
	
	        <TextView
	        	android:id="@+id/text_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textSize="15sp" />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:layout_width="80dip"
	            android:layout_height="wrap_content"
	            android:text="总价         "
	            android:textColor="@color/hardware_getorder_label_gradcolor"
	            android:textSize="15sp" />
	
	        <TextView
	        	android:id="@+id/text_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textColor="#ffff0000"
	            android:textSize="15sp" />
	    </LinearLayout>
	
	    <LinearLayout
	    	android:id="@+id/layout_images"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:layout_width="80dip"
	            android:layout_height="wrap_content"
	            android:text="明细 "
	            android:textColor="@color/hardware_getorder_label_gradcolor"
	            android:textSize="15sp" />
	
	        <ImageView 
				android:id="@+id/image_content1"
				android:layout_width="60dip"  
				android:layout_height="60dip"/>
			<ImageView 
				android:id="@+id/image_content2"
				android:layout_width="60dip"  
				android:layout_height="60dip" 
				android:layout_marginLeft="5dip"/>
			<ImageView 
				android:id="@+id/image_content3"
				android:layout_width="60dip"  
				android:layout_height="60dip" 
				android:layout_marginLeft="5dip"/>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal" >
	        <TextView
	            android:layout_width="80dip"
	            android:layout_height="wrap_content"
	            android:text="备注 "
	            android:textColor="@color/hardware_getorder_label_gradcolor"
	            android:textSize="15sp" />
	        <TextView
	        	android:id="@+id/text_remark"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textColor="@color/hardware_getorder_text_gradcolor"
	            android:textSize="15sp" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/layout_deliver_place"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal" >
	        <TextView
	            android:layout_width="80dip"
	            android:layout_height="wrap_content"
	            android:text="发货地   "
	            android:textColor="@color/hardware_getorder_label_gradcolor"
	            android:textSize="15sp" />
	        <TextView
	        	android:id="@+id/text_deliver_place"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textColor="@color/hardware_getorder_text_gradcolor"
	            android:textSize="15sp" />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/layout_supplier_connect"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:visibility="gone">
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:orientation="horizontal" >
		        <TextView
		            android:layout_width="80dip"
		            android:layout_height="wrap_content"
		            android:text="联系方式"
		            android:textColor="@color/hardware_getorder_label_gradcolor"
		            android:textSize="15sp" />
		        <TextView
		        	android:id="@+id/text_supplier_company"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="@color/hardware_getorder_text_gradcolor"
		            android:textSize="15sp" />
		        <TextView
		        	android:id="@+id/text_supplier_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dip"
		            android:text=""
		            android:textColor="@color/hardware_getorder_text_gradcolor"
		            android:textSize="15sp" />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:orientation="horizontal" >
		        <TextView
		            android:layout_width="80dip"
		            android:layout_height="wrap_content"
		            android:text=" "
		            android:textColor="@color/hardware_getorder_label_gradcolor"
		            android:textSize="15sp" />
		        <TextView
		        	android:id="@+id/text_supplier_phone"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="@color/hardware_getorder_text_gradcolor"
		            android:textSize="15sp" />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:orientation="horizontal" >
		        <TextView
		            android:layout_width="80dip"
		            android:layout_height="wrap_content"
		            android:text="  "
		            android:textColor="@color/hardware_getorder_label_gradcolor"
		            android:textSize="15sp" />
		        <TextView
		        	android:id="@+id/text_supplier_address"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="@color/hardware_getorder_text_gradcolor"
		            android:textSize="15sp" />
		    </LinearLayout>
		</LinearLayout>
		
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="40dip"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip" 
	        android:gravity="center">
	
	        <Button
	        	android:id="@+id/btn_select_supplier"
	            android:layout_width="250dip"
	            android:layout_height="wrap_content"
	            android:background="@drawable/conform_order"
	            android:gravity="center"
	            android:text="选择该供应商并查看联系方式"
	            android:textColor="#ffffffff"
	            android:textSize="15sp" />
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>