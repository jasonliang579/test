<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
     >
    
    <include layout="@layout/title_bar" />

    <EditText 
        android:id="@+id/company_ed"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:hint="请输入公司介绍"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:gravity="top|left"
        android:background="@drawable/login_mobile_phone_registered_btn_unclick"
        />

    <com.jieyangjiancai.zwj.ui.views.MyButton
        android:id="@+id/company_bt_ok"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/conform"
        android:text="确定" 
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />
     
     
</LinearLayout>
