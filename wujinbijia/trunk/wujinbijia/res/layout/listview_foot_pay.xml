<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:orientation="vertical"
    android:background="#fff2f2f2">
    <!-- 优惠券 -->
    <RelativeLayout
	    android:layout_width="fill_parent"  
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:orientation="horizontal"
	    android:background="#ffffffff">  
	    <LinearLayout
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dip"
		    android:orientation="horizontal">
		    <TextView
		        android:layout_width="wrap_content"  
		    	android:layout_height="wrap_content"
		    	android:text="优惠券"
		    	android:textSize="15sp" />
		    <TextView
		        android:id="@+id/textview_coupon"
		        android:layout_width="wrap_content"  
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="5dip"
		    	android:background="#ffff0000"
		    	android:textSize="13sp" />
		</LinearLayout>
	    <LinearLayout
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_alignParentRight="true" >
		    <TextView
		        android:id="@+id/textview_use_coupon"
		        android:layout_width="wrap_content"  
		    	android:layout_height="wrap_content"
		    	android:textSize="13sp" />
		    <ImageView 
		        android:layout_width="wrap_content"  
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="5dip"
		    	android:layout_marginRight="10dip"
		    	android:layout_gravity="center_vertical"
		    	android:src="@drawable/more"
		    	/>
		</LinearLayout>   
	</RelativeLayout>  
	
    <LinearLayout 
        android:layout_width="fill_parent"  
		android:layout_height="wrap_content"
		android:layout_marginTop="10dip"
		android:orientation="vertical">
	    <TextView 
	        android:layout_width="fill_parent"  
			android:layout_height="50dip"
			android:paddingLeft="5dip"
			android:gravity="center_vertical"
			android:text="支付方式"
			android:textSize="15sp"
			android:background="#ffffffff"/>
	    <RelativeLayout 
	        android:id="@+id/layout_unionpay"
	        android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:layout_marginTop="1dip"
			android:background="#ffffffff">
		    <LinearLayout 
		        android:layout_width="wrap_content"  
				android:layout_height="wrap_content">
		        <ImageView 
		            android:layout_width="wrap_content"  
					android:layout_height="wrap_content"
					android:paddingLeft="5dip"
					android:layout_gravity="center_vertical"
					android:src="@drawable/unionpay"/>
		        <TextView 
			        android:layout_width="fill_parent"  
					android:layout_height="50dip"
					android:layout_marginLeft="5dip"
					android:gravity="center_vertical"
					android:text="银行卡支付"
					android:textSize="15sp"/>
		    </LinearLayout>
	        <ImageView 
	            android:layout_width="wrap_content"  
				android:layout_height="wrap_content"
				android:layout_marginRight="5dip"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:src="@drawable/selected"
				android:scaleType="fitCenter"/>
	    </RelativeLayout>
        <RelativeLayout 
	        android:id="@+id/layout_weixinpay"
	        android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
			android:layout_marginTop="1dip"
			android:background="#ffffffff">
		    <LinearLayout 
		        android:layout_width="wrap_content"  
				android:layout_height="wrap_content">
		        <ImageView 
		            android:layout_width="wrap_content"  
					android:layout_height="wrap_content"
					android:paddingLeft="5dip"
					android:layout_gravity="center_vertical"
					android:src="@drawable/weixinpay"/>
		        <TextView 
			        android:layout_width="fill_parent"  
					android:layout_height="50dip"
					android:layout_marginLeft="5dip"
					android:gravity="center_vertical"
					android:text="微信支付"
					android:textSize="15sp"/>
		    </LinearLayout>
	        <ImageView 
	            android:layout_width="wrap_content"  
				android:layout_height="wrap_content"
				android:layout_marginRight="5dip"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:src="@drawable/unselect"
				android:scaleType="fitCenter"/>
	    </RelativeLayout>
    </LinearLayout>
</LinearLayout>


