<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:orientation="vertical">  
	<LinearLayout
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent" 
		android:orientation="vertical"
		android:background="#ffffffff"
		android:gravity="center_horizontal">	    
		<include layout="@layout/title_bar" android:layout_height="50dip"/>
	
		<EditText 
		    android:id="@+id/edt_remark"
		    android:layout_width="fill_parent"  
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="10dip"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:paddingTop="5dip"
	    	android:paddingLeft="5dip"
	    	android:paddingRight="5dip"
	    	android:lines="5"
	    	android:hint="请输入信息内容"
	    	android:textSize="15sp"
            android:gravity="top"
	    	android:background="@drawable/edit_bg"/>
		
    	<LinearLayout
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content" 
			android:orientation="horizontal"
			android:layout_marginTop="20dip"
			android:layout_marginLeft="10dip"
			android:gravity="center_horizontal">  
			<ImageView 
				android:id="@+id/image_content1"
				android:layout_width="60dip"  
				android:layout_height="60dip" 
				android:visibility="gone"/>
			<ImageView
	            android:id="@+id/image_select_picture1"
	            android:layout_width="60dip"
	            android:layout_height="60dip"
	            android:background="@drawable/add_photo_order" />
		</LinearLayout>	
	    
		<TextView
		    android:layout_width="wrap_content"  
	    	android:layout_height="wrap_content" 
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:layout_marginTop="5dip"
	    	android:layout_marginBottom="5dip"
	    	android:text="点击拍照按钮，上传产品清单的照片"/>
		
		<Button 
		    android:id="@+id/btn_send_message"
		    android:layout_width="250dip"  
	    	android:layout_height="wrap_content" 
	    	android:text="发布消息"
	    	android:textColor="#ffffffff"
	    	android:background="@drawable/conform_order"/>
		
		<TextView
		    android:layout_width="fill_parent"  
	    	android:layout_height="wrap_content" 
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:layout_marginTop="25dip"
	    	android:layout_marginBottom="5dip"
	    	android:textColor="#ffff0000"
	    	android:text="行业圈仅发布促销，调价等与交易相关的信息。与此无关的内容，将会被直接删除，发布违规违法内容将被封号。"/>
	</LinearLayout>
	
	<include layout="@layout/progress_bar" />"
	
</RelativeLayout>
